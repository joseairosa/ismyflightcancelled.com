!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : 'Is My Flight Cancelled?'
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'This website was built with the aim to help people find if their flight was cancelled or not.'}"}
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => 'reload'
    %link{:href => "https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800", :rel => "stylesheet", :type => "text/css"}
    %link{:href => "https://fonts.googleapis.com/css?family=Merriweather:400,300,300italic,400italic,700,700italic,900,900italic", :rel => "stylesheet", :type => "text/css"}
    %link{:href => "#{image_path("apple-icon-57x57.png")}", :rel => "apple-touch-icon", :sizes => "57x57"}
    %link{:href => "#{image_path("apple-icon-60x60.png")}", :rel => "apple-touch-icon", :sizes => "60x60"}
    %link{:href => "#{image_path("apple-icon-72x72.png")}", :rel => "apple-touch-icon", :sizes => "72x72"}
    %link{:href => "#{image_path("apple-icon-76x76.png")}", :rel => "apple-touch-icon", :sizes => "76x76"}
    %link{:href => "#{image_path("apple-icon-114x114.png")}", :rel => "apple-touch-icon", :sizes => "114x114"}
    %link{:href => "#{image_path("apple-icon-120x120.png")}", :rel => "apple-touch-icon", :sizes => "120x120"}
    %link{:href => "#{image_path("apple-icon-144x144.png")}", :rel => "apple-touch-icon", :sizes => "144x144"}
    %link{:href => "#{image_path("apple-icon-152x152.png")}", :rel => "apple-touch-icon", :sizes => "152x152"}
    %link{:href => "#{image_path("apple-icon-180x180.png")}", :rel => "apple-touch-icon", :sizes => "180x180"}
    %link{:href => "#{image_path("android-icon-192x192.png")}", :rel => "icon", :sizes => "192x192", :type => "image/png"}
    %link{:href => "#{image_path("favicon-32x32.png")}", :rel => "icon", :sizes => "32x32", :type => "image/png"}
    %link{:href => "#{image_path("favicon-96x96.png")}", :rel => "icon", :sizes => "96x96", :type => "image/png"}
    %link{:href => "#{image_path("favicon-16x16.png")}", :rel => "icon", :sizes => "16x16", :type => "image/png"}
    %link{:href => "#{image_path("manifest.json")}", :rel => "manifest"}
    %meta{:content => "#ffffff", :name => "msapplication-TileColor"}
    %meta{:content => "#{image_path("ms-icon-144x144.png")}", :name => "msapplication-TileImage"}
    %meta{:content => "#ffffff", :name => "theme-color"}
    = csrf_meta_tags
  %body#page-top
    = yield
    = javascript_include_tag 'application', 'data-turbolinks-track' => 'reload'
